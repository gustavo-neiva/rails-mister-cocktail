<div class="header">
  <h1> Hangover Cocktails <small> - powered by RoR</small></h1>
</div>
<div class="row">
  <div class="col-sm-8">
    <div class="list-group">
      <% @cocktails.each do |cocktail| %>
          <%= link_to cocktail.name, cocktail_path(cocktail), class: "btn btn-default", class: "list-group-item" %>
        <% end %>
    </div>
  </div>
    <div class="col-sm-4">
      <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name, label: false %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
